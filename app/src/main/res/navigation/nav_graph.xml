<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListFragment">

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.android_week10_ex1.StudentListFragment"
        android:label="Student List"
        tools:layout="@layout/fragment_student_list">
        <action
            android:id="@+id/action_studentList_to_addStudent"
            app:destination="@id/addStudentFragment" />
        <action
            android:id="@+id/action_studentList_to_updateStudent"
            app:destination="@id/updateStudentFragment" />
    </fragment>

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.android_week10_ex1.AddStudentFragment"
        android:label="Add Student"
        tools:layout="@layout/fragment_add_student" />

    <fragment
        android:id="@+id/updateStudentFragment"
        android:name="com.example.android_week10_ex1.UpdateStudentFragment"
        android:label="Update Student"
        tools:layout="@layout/fragment_update_student">
        <argument
            android:name="studentId"
            app:argType="string" />
        <argument
            android:name="studentName"
            app:argType="string" />
    </fragment>

</navigation>
